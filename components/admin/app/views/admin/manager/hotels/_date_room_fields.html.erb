<div class="nested-fields mb-3">

  <div class="form-group row">
    <%= f.label t('.date'), class: "h6 col-2 col-form-label" %>
    <div class="col-5">
      <%= f.text_field :date, class: "date_for_rooms form-control form-control-sm" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label t('.rooms'), class: "h6 col-2 col-form-label" %>
    <div class="col-5">
      <%= f.text_field :rooms, class: " form-control form-control-sm" %>
    </div>
  </div>

  <%= link_to_remove_association "删除日期", f, {class: "btn btn-sm btn-danger"} %>
</div>
