<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">名称</th>
      <th scope="col">内容</th>
    </tr>
  </thead>

  <tbody>

    <tr>
      <td>
        <%= t(".name") %>
      </td>
      <td>
        <%= @hotel.try('name') %>
      </td>
    </tr>

    <% hotel_room_types = @hotel.hotel_room_types %>
    <% hotel_room_types.each do |rt| %>
      <tr>
        <td>
          <%= t(".#{rt.room_type.name_eng}_price") %>
        </td>
        <td>
          <%= rt.price %>
        </td>
      </tr>

      <tr>
        <td>
          <%= t(".#{rt.room_type.name_eng}_settlement_price") %>
        </td>
        <td>
          <%= rt.settlement_price %>
        </td>
      </tr>
    <% end %>

    <% hotel_room_types.each do |rt| %>
      <tr>
        <td colspan="2" style="text-align: center;">
          <%= rt.room_type.name %>
        </td>
      </tr>

      <% rt.date_rooms.each do |date_room| %>
        <tr>
          <td>
            <%= date_room.date %>
          </td>
          <td>
            <%= date_room.rooms %>
          </td>
        </tr>
      <% end %>
    <% end %>

    <tr>
      <td>
        <%= t(".breakfast") %>
      </td>
      <td>
        <%= @hotel.try('breakfast') == 0 ? "不含早" : "含早" %>
      </td>
    </tr>

    <tr>
      <td>
        <%= t(".car") %>
      </td>
      <td>
        <%= @hotel.try('car') == 0 ? "不含用车" : "含用车" %>
      </td>
    </tr>

    <tr>
      <td>
        <%= t(".tax_rate") %>
      </td>
      <td>
        <%= @hotel.try('tax_rate') %>
      </td>
    </tr>

    <!-- <tr>
      <td>
        <%# t(".tax_point") %>
      </td>
      <td>
        <%# @hotel.try('tax_point') %>
      </td>
    </tr> -->

    <tr>
      <td>
        <%= t(".conferences") %>
      </td>
      <td>
        <%= @hotel.conferences.map {|c| c.name}.join(", ") %>
      </td>
    </tr>

  </tbody>
</table>
