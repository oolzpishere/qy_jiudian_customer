<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">名称</th>
      <th scope="col">内容</th>
    </tr>
  </thead>

  <tbody>
    <% order_data = ::Admin::OrderData.new(order: @order) %>
    <% @show_attributes.each do |item| %>
      <tr>
        <td>
          <%= t(".#{item}") %>
        </td>
        <td>
          <%= order_data.send_command(item) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

