<!DOCTYPE html>
<html>
<head>
  <title>Admin</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    "admin/application", media: "all" %>
  <%= javascript_include_tag "admin/application" %>
</head>
<body style="background-color: #f5f5f5;">
<div class="">
  <% if notice %>
  <p class="notice alert alert-success fade show" role="alert"><%= notice %></p>
  <% end %>
  <% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-2 p-0">
        <%= render "vertical_navs" %>
      </div>

      <div class="col">
        <div class="col pt-3">
        </div>

        <div class="col shadow-sm p-3 mt-3 mr-3 mb-3 bg-white rounded">
          <%= yield %>
        </div>

      </div>
    </div>
  </div>
</div>

</body>
</html>
